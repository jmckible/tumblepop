%html
  %head
    %title tumblepop
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
    
  %body
    - if logged_in?
      %p
        Logged in as:
        = current_user.name
        
      - if admin_logged_in?
        %p= link_to 'Admin', admin_path
      
      %p= link_to 'Logout', logout_path
    - else
      %p= link_to 'Login', login_path
  
    = yield