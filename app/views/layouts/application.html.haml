%html
  %head
    %title tumblepop
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
    
  %body
    #Content
      #Header
        - if logged_in?
          = current_user.name
      
          - if admin_logged_in?
            = link_to 'Admin', admin_path
    
          = link_to 'Logout', logout_path
          
          
        - else
          = link_to 'Login', login_path
          
          
      #Logo= link_to 'tumblepop', root_path


      #Main
        = yield